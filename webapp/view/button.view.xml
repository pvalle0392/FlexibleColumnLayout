<mvc:View 
	controllerName="Columns.columnNav.controller.button"
	xmlns ="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
	
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="EQUIPOS"/>
				</f:heading>
				<f:navigationActions>
					<OverflowToolbarButton
						type="Transparent"
						icon="sap-icon://home"
						press=".handleHome"
						tooltip="Close column"
						visible="{= ${/actionButtonsInfo/endColumn/closeColumn} !== null }"/>
				</f:navigationActions>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content> 
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent" >
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="15rem" placeholder="Filtar por Ub. TÃ©cina"/>
					<OverflowToolbarButton icon="sap-icon://add" text="Add" type="Transparent" press=".onAdd"/>
					<OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
				</OverflowToolbar>
				<Table class="sapFDynamicPageAlignContent">
					<columns>
						<Column width="12em">
							<Text text="Lista de equipos"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onListItemPress">
							<cells>
								<ObjectIdentifier title="Router Cisco" text="30001256"/>
								<ObjectNumber number="GREB" unit="EBIM"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
	

		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept" press="onbackk"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>